TELEGRAM_API_ID=
TELEGRAM_API_HASH=
# Optional after first login. If empty, the app asks for phone/code/password and prints a reusable session string.
TELEGRAM_SESSION_STRING=
# Required only for first login when TELEGRAM_SESSION_STRING is empty.
TELEGRAM_PHONE=+9725XXXXXXXX
# Optional: active health check interval in seconds (default 30).
TELEGRAM_HEALTHCHECK_INTERVAL_SECONDS=30

# Channel username/link/id to listen to (for example: @HomeFrontCommand or -1001234567890).
SOURCE_CHANNEL=
# Comma-separated private chat/user ids to receive "safe to leave" notifications.
# Preferred over TARGET_CHAT_ID.
TARGET_CHAT_IDS=237611256
# Backward-compatible single chat id (optional if TARGET_CHAT_IDS is set).
TARGET_CHAT_ID=

# Comma-separated list of monitored towns/cities in Hebrew.
# "באר שבע" will also match "באר שבע - דרום/מזרח/מערב/צפון".
MONITORED_TOWNS=עומר, באר שבע

# Optional: timer length in minutes (default 10).
TIMER_MINUTES=10

# Optional startup replay flag:
# true  -> fetch and process past messages from source channel on startup.
# false -> process only new messages arriving after startup.
FETCH_PAST_ALERTS_ON_START=false
# Optional lookback window for replay in minutes.
# Default is TIMER_MINUTES.
PAST_ALERTS_MINUTES=10
